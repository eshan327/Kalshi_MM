# Kalshi Market Maker - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Kalshi API Configuration (REQUIRED)
# =============================================================================

# API Key ID (from Kalshi dashboard)
KALSHI_API_KEY_ID=your-api-key-id-here

# Path to your private key file
KALSHI_PRIVATE_KEY_FILE=private_key.pem

# Environment: "production" or "demo"
KALSHI_ENVIRONMENT=production

# =============================================================================
# Strategy Configuration (optional - defaults shown)
# =============================================================================

# TARGET_SERIES=KXHIGHNY
# MIN_SPREAD=5
# QUOTE_REFRESH_INTERVAL=5.0

# =============================================================================
# Risk Configuration (optional - defaults shown)
# =============================================================================

# MAX_POSITION_PER_MARKET=100
# MAX_TOTAL_POSITION=500
# MAX_DAILY_LOSS=50.00
# DEFAULT_ORDER_SIZE=10

# =============================================================================
# Flask Configuration (optional)
# =============================================================================

# FLASK_HOST=127.0.0.1
# FLASK_PORT=5000
# FLASK_DEBUG=true