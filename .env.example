# Kalshi Market Maker - Environment Configuration
# Copy this file to .env and fill in your values

# Kalshi API Configuration
# Get your API keys from: https://kalshi.com/settings/api

# Production API key ID (leave blank to use demo)
KALSHI_PROD_API_KEY_ID=

# Demo API key ID
KALSHI_DEMO_API_KEY_ID=

# Which environment to use: "prod" or "demo"
KALSHI_ENV=demo

# Flask Configuration
FLASK_DEBUG=true
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# Risk Limits
MAX_POSITION_PER_MARKET=100
MAX_TOTAL_POSITION=500
MAX_DAILY_LOSS=50.00

# Strategy Configuration
TARGET_SERIES=KXHIGHNY
MIN_SPREAD=5
DEFAULT_ORDER_SIZE=10
